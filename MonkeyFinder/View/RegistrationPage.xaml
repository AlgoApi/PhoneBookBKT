<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyFinder.View.RegistrationPage"
             Title="Регистрация">

    <VerticalStackLayout Spacing="20" Padding="30">
        <Entry x:Name="NameEntry" Placeholder="Имя" />
        <Entry x:Name="UsernameEntry" Placeholder="Логин" />
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" />
        <Button Text="Зарегистрироваться" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>

    
</ContentPage>
